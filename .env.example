# KnowledgeWeaver Configuration

# LLM Configuration - 问答系统使用（包月服务）
LLM_BINDING_HOST=https://space.ai-builders.com/backend/v1
LLM_BINDING_API_KEY=your_api_key_here
LLM_MODEL=deepseek

# Extraction LLM Backend - 文档处理使用（Gemini API，免费）
EXTRACTION_LLM_BACKEND=gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# 并发配置
CONCURRENT_REQUESTS=5
MAX_RETRIES=3
CHUNK_OVERLAP_RATIO=0.5
CHECKPOINT_DIR=./data/checkpoints

# Server Configuration
HOST=0.0.0.0
PORT=9621

# Document Processing
CHUNK_SIZE=800

# RAG Configuration
EMBEDDING_MODEL=text-embedding-ada-002
CHROMA_PERSIST_DIR=./data/storage/vector_db
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5

# Neo4j Configuration
USE_NEO4J=true
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_MAX_POOL_SIZE=50
NEO4J_BATCH_SIZE=500

# Langfuse Configuration (可观测性监控)
# 设置为 true 启用 Langfuse 追踪
LANGFUSE_ENABLED=false

# Langfuse Cloud (默认)
LANGFUSE_PUBLIC_KEY=your_public_key_here
LANGFUSE_SECRET_KEY=your_secret_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Langfuse Self-Hosted (自托管)
# LANGFUSE_HOST=http://localhost:3000
